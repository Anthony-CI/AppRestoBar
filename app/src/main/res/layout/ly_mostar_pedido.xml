            android:textSize="14sp" />

        <TextView
            android:id="@+id/cantidadPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cantidad: "
            android:textSize="14sp" />

        <TextView
            android:id="@+id/mesaPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mesa: "
            android:textSize="14sp" />

        <TextView
            android:id="@+id/mozoPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
